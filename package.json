{
  "name": "recopyfast",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev-info.js && concurrently --prefix-colors \"blue,green\" --prefix-names \"NEXT,WS\" \"npm run dev:next\" \"npm run dev:ws\"",
    "dev:next": "next dev --turbopack",
    "dev:ws": "cd server && npm run dev",
    "dev:simple": "concurrently --kill-others --prefix-colors \"blue,green\" \"npm run dev:next\" \"npm run dev:ws\"",
    "dev:basic": "concurrently \"npm run dev:next\" \"npm run dev:ws\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "echo \"No tests specified\" && exit 0",
    "precommit": "npm run lint && npm run type-check",
    "prepush": "npm run build && npm run test",
    "setup": "npm install && cd server && npm install",
    "ws:install": "cd server && npm install",
    "hooks:install": "node scripts/install-hooks.js"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.0",
    "@tiptap/extension-placeholder": "^3.1.0",
    "@tiptap/react": "^3.1.0",
    "@tiptap/starter-kit": "^3.1.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "openai": "^5.12.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
